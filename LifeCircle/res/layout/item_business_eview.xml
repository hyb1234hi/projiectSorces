<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16.5dp"
            android:background="@drawable/bg_time_line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/left_eview_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bus_eview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="顾客评价"
                android:textColor="#A6A5A4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eview_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(共24条)"
                android:textColor="#A6A5A4"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bus_eview_button"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/dian_ping_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="点评一下呗，亲~"
                android:textColor="#CCCCCC"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/business_eview_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/bus_eview_bg"
            android:orientation="vertical"
            android:paddingLeft="6.5dp"
            android:paddingRight="2dp" >

            <com.sinaleju.lifecircle.app.customviews.NoSlideListView
                android:id="@+id/business_eview_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:cacheColorHint="#00000000"
                android:divider="#0000"
                android:fadingEdge="none"
                android:listSelector="#0000"
                android:scrollbars="none" />

            <RelativeLayout
                android:id="@+id/show_more"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:background="#EDEBE7"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="查看更多"
                    android:textColor="#A6A6A4"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/right_icon" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>