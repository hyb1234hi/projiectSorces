<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectlivearea_map"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/selector_selectlivearea_maplayout"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"        
        >

        <ImageView
            android:id="@+id/around_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:duplicateParentState="true"
            android:background="@drawable/ac_left_one_icon_seleted"
            android:contentDescription="@string/imageDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/around_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家名称"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/around_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家地址"
                android:singleLine="true"
                android:textColor="#8B8B8B"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/around_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有888人关注"
                android:singleLine="true"
                android:textColor="#8B8B8B"
                android:textSize="16sp" />
        </LinearLayout>        
        
    <ImageView
        android:id="@+id/around_selected"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/imageDescription"
        android:src="@drawable/location_current" 
        android:visibility="gone"
        />
    </LinearLayout>


</LinearLayout>