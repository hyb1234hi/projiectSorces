<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
    <!-- 连接线 -->
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:orientation="horizontal">
         <ImageView android:id="@+id/business_distance_connect1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/nearby_connect_unselected_icon"
	        android:layout_weight="1"/>
	    
	    <ImageView android:id="@+id/business_distance_connect2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/nearby_connect_unselected_icon"
	        android:layout_weight="1"/>
	    <ImageView android:id="@+id/business_distance_connect3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/nearby_connect_unselected_icon"
	        android:layout_weight="1"/>
     </LinearLayout>
     
    <RelativeLayout 
        android:id="@+id/nearby_layout"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
		>
        
        <LinearLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:gravity="center_vertical"
		    android:orientation="horizontal">
            <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center">
	            <Button android:id="@+id/business_distance_btn1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/nearby_business_distance_btn_style"
			        android:gravity="left|center_vertical"
			        android:text="1km"
			        android:background="@drawable/nearby_left_unselected_icon"/>
	        </LinearLayout>
	        
	        <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"/>
		    
	        <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center">
	             <Button android:id="@+id/business_distance_btn2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/nearby_business_distance_btn_style"
			        android:text="2km"
			        android:background="@drawable/nearby_middle_unselected_icon"/>
	        </LinearLayout>
	        
		   
		
		    <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"/>
		    
		    <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center">
		        <Button android:id="@+id/business_distance_btn3"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/nearby_business_distance_btn_style"
			        android:text="3km"
			        android:background="@drawable/nearby_middle_unselected_icon"/>
		    </LinearLayout>
		
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"/>
		    <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center">
		        <Button android:id="@+id/business_distance_btn4"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/nearby_business_distance_btn_style"
			        android:gravity="right|center_vertical"
			        android:text="4km"
			        android:background="@drawable/nearby_right_unselected_icon"/>
		    </LinearLayout>
        </LinearLayout>
        
         <TextView android:id="@+id/business_distance_front_btn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/light_blue"
			    android:visibility="invisible"
			    android:padding="3dp"
			    android:textSize="11sp"
			    android:text="1km"
			    android:layout_centerVertical="true"
			    android:background="@drawable/nearby_cur_middle_selected_icon"/>
    </RelativeLayout>

</RelativeLayout>