<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/picker_background"
        android:orientation="vertical" >

         <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="55dip"
            android:background="@drawable/picker_topbar_background"
            android:orientation="horizontal"
            android:clickable="false" >

            <Button
                android:id="@+id/wheel_button_cancel"
                android:layout_width="60dip"
                android:layout_height="36dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/selector_picker_topbar_buttons"
                android:text="取消"
                android:textSize="15sp" />

            <Button
                android:id="@+id/wheel_button_ok"
                android:layout_width="60dip"
                android:layout_height="36dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/selector_picker_topbar_buttons"
                android:text="确定"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="180dip"
            android:orientation="horizontal"
            android:paddingBottom="4dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="4dip" >

            <com.sinaleju.lifecircle.app.customviews.picker.WheelView
                android:id="@+id/wheelView_view1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.sinaleju.lifecircle.app.customviews.picker.WheelView
                android:id="@+id/wheelView_view2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>