<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEBE6" >

    <GridView
        android:id="@+id/change_head_gridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:horizontalSpacing="6dp"
        android:numColumns="3"
        android:paddingLeft="2dip"
        android:paddingRight="2dip"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/change_bottom_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/change_come_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/change_button_bg"
                android:gravity="center"
                android:text="相册选取"
                android:textColor="#565656"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/change_come_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/change_button_bg"
                android:gravity="center"
                android:text="拍照上传"
                android:textColor="#565656"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>