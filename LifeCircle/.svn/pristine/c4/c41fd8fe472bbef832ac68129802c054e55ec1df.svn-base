<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/list_item_selector"
    android:focusable="false"
    >
    <ImageView android:id="@+id/nearby_item_openstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView android:id="@+id/nearby_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textColor="@color/dark_black"/>
    
    <TextView android:id="@+id/nearby_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="13sp"
        android:textColor="@color/color_home_page_top_shishi_remen_text_selected"/>
    
    <Button android:id="@+id/nearby_item_tele_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:background="@drawable/dial_phone_btn"/>
    
</LinearLayout>