<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    android:orientation="vertical" >
    <LinearLayout android:id="@+id/chat_left_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginRight="50dp"
        android:gravity="top|left">
	    <ImageView
	        android:id="@+id/chat_detail_left_head_image"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:padding="3dp"
	        android:scaleType="centerCrop"
	        />
	    <TextView android:id="@+id/chat_detail_left_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:textColor="@color/dark_black"
	        android:lineSpacingExtra="2dp"
	        android:textSize="14sp"
	        android:background="@drawable/chat_left_content_bg"/>
    </LinearLayout>
    
    <RelativeLayout android:id="@+id/chat_right_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="right|top">
	    <ImageView
	        android:id="@+id/chat_detail_right_head_image"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:padding="3dp"
	        android:scaleType="centerCrop"
	        android:layout_alignParentRight="true"
	        />
	    
	    <TextView android:id="@+id/chat_detail_right_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/chat_detail_right_head_image"
	        android:layout_marginRight="5dp"
	        android:layout_marginLeft="50dp"
	        android:lineSpacingExtra="2dp"
	        android:textColor="@color/dark_black"
	        android:textSize="14sp"
	        android:background="@drawable/chat_right_content_bg"/>
    </RelativeLayout>
</LinearLayout>