<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <WebView
        android:id="@+id/ticket_web"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/web_layout_bg"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/web_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_web_go_back" />

        <Button
            android:id="@+id/web_goforward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_web_go_forward" />

        <Button
            android:id="@+id/web_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/web_reload" />
    </RelativeLayout>

</RelativeLayout>