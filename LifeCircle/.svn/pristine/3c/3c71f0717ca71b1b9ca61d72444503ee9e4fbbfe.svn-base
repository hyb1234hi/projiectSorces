<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- <ImageView -->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingLeft="6dp"
            android:paddingTop="11dp" >

            <ImageView
                android:id="@+id/imgHeadPortrait"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_time_line_header_broadcast" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/lyotTimeLine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >

            <View
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_time_line" />

            <ImageView
                android:id="@+id/imgFlag"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/ic_home_page_flag_normal"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lyotContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="16dp" >

            <TextView
                android:id="@+id/system_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="亲爱的用户:"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/system_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:lineSpacingExtra="2sp"
                android:text="张大千喝豆浆返回大富豪酒店京东方很经典"
                android:textColor="#535352"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>