<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/findfriends_sina"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selector_selectlivearea_maplayout"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/login_sina"
        android:contentDescription="@string/imageDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="用户名"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共同好友数"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/imageDescription"
        android:visibility="gone"
        android:src="@drawable/findfriends_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已添加"
        android:visibility="gone"
        android:textSize="14sp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/selector_main_button"
        android:padding="2dp"
        android:text="邀请"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>